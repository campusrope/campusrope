{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@campusrope/api-interface": ["libs/api-interface/src/index.ts"],
      "@campusrope/shared": ["libs/shared/src/index.ts"],
      "@campusrope/material": ["libs/material/src/index.ts"],
      "@campusrope/state/auth": ["libs/state/auth/src/index.ts"],
      "@campusrope/state/root": ["libs/state/root/src/index.ts"],
      "@campusrope/state/layout": ["libs/state/layout/src/index.ts"],
      "@campusrope/state/router": ["libs/state/router/src/index.ts"],
      "@campusrope/state/users": ["libs/state/users/src/index.ts"],
      "@campusrope/models": ["libs/models/src/index.ts"],
      "@campusrope/ngrx-actions": ["libs/ngrx-actions/src/index.ts"],
      "@campusrope/testing": ["libs/testing/src/index.ts"],
      "@campusrope/feature/auth": ["libs/feature/auth/src/index.ts"]
    },
    "rootDir": "."
  },
  "exclude": ["node_modules", "tmp"]
}
